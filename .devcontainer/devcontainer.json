{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:16",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16"
    }
  },
  "onCreateCommand": ["npm install"],
  "postAttachCommand": "npm start",
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000],
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "extensions": ["yzhang.markdown-all-in-one"]
    }
  }
}
